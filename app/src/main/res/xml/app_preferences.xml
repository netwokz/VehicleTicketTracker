<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="preference_ascending_checkbox"
        android:summary="Sort Vehicles in ascending order"
        android:title="Ascending" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/sort_options"
        android:entryValues="@array/sort_values"
        android:key="preference_sort_order"
        android:summary="Sort Vehicles by date"
        android:title="Sorting">

    </ListPreference>

</PreferenceScreen>